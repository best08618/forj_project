<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.alab.fourj.MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/expanded_menu_button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FAFAFA"
            android:src="@drawable/menu"
            />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:hint="SEARCH MOVIE"
            android:inputType="textCapWords" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="#FAFAFA"
            android:src="@drawable/search"
             />

        <ImageButton
            android:id="@+id/store_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="#FAFAFA"
            android:src="@drawable/shopping_bag"
            />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textAllCaps="true"
                android:background="#F57F17"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivated"
                android:textAllCaps="true"
                android:background="#F9A825"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lonely"
                android:textAllCaps="true"
                android:background="#FBC02D"
                android:textColor="#FFFFFF"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad"
                android:textAllCaps="true"
                android:background="#FDD835"
                android:textColor="#000000"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anger"
                android:textAllCaps="true"
                android:background="#FFEB3B"
                android:textColor="#000000"/>





        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/norbit_image"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/classic" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/norbit_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="클래식, 2003"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#FFB300" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:layout_gravity="center"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:stepSize="0.5"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#FFB300" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="#FFB300"
                            android:paddingLeft="33dp"
                            android:drawableStart="@drawable/star_smallicon" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="#FFB300"
                            android:paddingLeft="33dp"
                            android:drawableStart="@drawable/tv" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/norbit1_image"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/youaremydestiny" />

                    <TextView
                        android:id="@+id/norbit1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="너는 내운명, 2005"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#FFB300" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:layout_gravity="center"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:stepSize="0.5"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#FFB300" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="#FFB300"
                            android:paddingLeft="33dp"
                            android:drawableStart="@drawable/star_smallicon" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:background="#FFB300"
                            android:paddingLeft="33dp"
                            android:drawableStart="@drawable/tv" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="16dp"
                         android:layout_marginTop="16dp"
                         android:layout_weight="1"
                         android:background="@android:color/white"
                         android:orientation="vertical">

                         <ImageView
                             android:id="@+id/norbit3_image"
                             android:layout_width="wrap_content"
                             android:layout_height="200dp"
                             android:scaleType="fitXY"
                             android:src="@drawable/eraser_inmyhead" />

                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="@android:color/darker_gray" />

                         <TextView
                             android:id="@+id/norbit3_text"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:gravity="start"
                             android:text="내 머리속의 지우개, 2004"
                             android:textColor="#000000"
                             android:layout_marginTop="5dp"
                             android:textStyle="bold"
                             android:textSize="20sp" />
                         <View
                             android:layout_marginTop="5dp"
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <RatingBar
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:max="5"
                             android:numStars="5"
                             android:layout_gravity="center"
                             style="@style/Base.Widget.AppCompat.RatingBar.Small"
                             android:stepSize="0.5"/>
                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             >

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_marginRight="2dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:drawableStart="@drawable/star_smallicon" />

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:drawableStart="@drawable/tv" />
                         </LinearLayout>


                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="16dp"
                         android:layout_weight="1"
                         android:orientation="vertical">

                         <ImageView
                             android:id="@+id/norbit2_image"
                             android:layout_width="wrap_content"
                             android:layout_height="200dp"
                             android:scaleType="fitXY"
                             android:src="@drawable/dont_across_river" />

                         <TextView
                             android:id="@+id/norbit2_text"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:gravity="start"
                             android:text="님아, 그강을 건너지 마오, 2014"
                             android:textColor="#000000"
                             android:layout_marginTop="5dp"
                             android:textStyle="bold"
                             android:textSize="20sp" />
                         <View
                             android:layout_marginTop="5dp"
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <RatingBar
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:max="5"
                             android:numStars="5"
                             android:layout_gravity="center"
                             style="@style/Base.Widget.AppCompat.RatingBar.Small"
                             android:stepSize="0.5"/>
                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:layout_marginRight="2dp"
                                 android:drawableStart="@drawable/star_smallicon" />

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:drawableStart="@drawable/tv" />
                         </LinearLayout>

                     </LinearLayout>
                 </LinearLayout>

                 </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="16dp"
                         android:layout_marginTop="16dp"
                         android:layout_weight="1"
                         android:background="@android:color/white"
                         android:orientation="vertical">

                         <ImageView
                             android:id="@+id/norbit4_image"
                             android:layout_width="wrap_content"
                             android:layout_height="200dp"
                             android:scaleType="fitXY"
                             android:src="@drawable/mebeforeyou" />

                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="@android:color/darker_gray" />

                         <TextView
                             android:id="@+id/norbit4_text"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:gravity="start"
                             android:text="Me Before You, 2016"
                             android:textColor="#000000"
                             android:layout_marginTop="5dp"
                             android:textStyle="bold"
                             android:textSize="20sp" />
                         <View
                             android:layout_marginTop="5dp"
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <RatingBar
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:max="5"
                             android:numStars="5"
                             android:layout_gravity="center"
                             style="@style/Base.Widget.AppCompat.RatingBar.Small"
                             android:stepSize="0.5"/>
                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:layout_marginRight="2dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:drawableStart="@drawable/star_smallicon" />

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:drawableStart="@drawable/tv" />
                         </LinearLayout>


                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="16dp"
                         android:layout_weight="1"
                         android:orientation="vertical">

                         <ImageView
                             android:id="@+id/norbit5_image"
                             android:layout_width="wrap_content"
                             android:layout_height="200dp"
                             android:scaleType="fitXY"
                             android:src="@drawable/hello_heizle" />

                         <TextView
                             android:id="@+id/norbit5_text"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:gravity="start"
                             android:text="The Fault in Our Stars, 2014"
                             android:textColor="#000000"
                             android:layout_marginTop="5dp"
                             android:textStyle="bold"
                             android:textSize="20sp" />
                         <View
                             android:layout_marginTop="5dp"
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <RatingBar
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:max="5"
                             android:numStars="5"
                             android:layout_gravity="center"
                             style="@style/Base.Widget.AppCompat.RatingBar.Small"
                             android:stepSize="0.5"/>
                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="1dp"
                             android:background="#FFB300" />

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:layout_marginRight="2dp"
                                 android:drawableStart="@drawable/star_smallicon" />

                             <Button
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:layout_marginTop="5dp"
                                 android:background="#FFB300"
                                 android:paddingLeft="33dp"
                                 android:drawableStart="@drawable/tv" />
                         </LinearLayout>

                     </LinearLayout>
                 </LinearLayout>

             </LinearLayout>
             </LinearLayout>


    </ScrollView>


</LinearLayout>
