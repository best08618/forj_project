<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/app_bar_main">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/expanded_menu_button"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FAFAFA"
                android:src="@drawable/menu"
                />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:hint="SEARCH MOVIE"
                android:inputType="textCapWords" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:background="#FAFAFA"
                android:src="@drawable/search"
                />

            <ImageButton
                android:id="@+id/store_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:background="#FAFAFA"
                android:src="@drawable/shopping_bag"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:text="This month"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="#795548"
                android:textAllCaps="true"
                android:textSize="20sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boosanhang"
                    android:onClick="busan"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/now_you_see_me"
                    android:onClick="now"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/finding_dorry"
                    android:onClick="dorry"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/seondal"
                    android:onClick="bongi"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/monster_watch"
                    android:onClick="watch"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.18"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ice_age"
                    android:onClick="ice"/>

            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="top"
                android:background="#FF882F"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/trophy"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RANK"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FAFAFA"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="hot"
                android:background="#FF882F">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/top"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="HOT"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="#FAFAFA"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="nearby"
                android:background="#FF882F">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="THEATER"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textColor="#FAFAFA"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="mood"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFA52F">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mood" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="MOOD"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="#FAFAFA"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:background="#FFA52F">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/weather" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="WEATHER"
                    android:textStyle="bold"
                    android:textColor="#FAFAFA"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="monospace"
                    android:textSize="17sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="genre"
                android:layout_margin="2dp"
                android:background="#FFA52F">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/genre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GENRE"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FAFAFA"
                    android:fontFamily="monospace"
                    android:textSize="17sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp">

            <ImageView
                android:id="@+id/weather_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/weather_screenshot"
                android:onClick="today_weather"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="190dp"
                android:text="GOOD MOVIES FOR \nTODAY..."
                android:textStyle="italic"
                android:fontFamily="sans-serif"
                android:textColor="#"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <ImageView
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/busan"
                android:onClick="busan"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="228dp"
                android:layout_height="150dp"
                android:scaleType="fitStart"
                android:src="@drawable/now_you_see_me"
                android:onClick="now"/>

            <ImageView
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/finding_dorry"
                android:onClick="dorry"/>

            <ImageView
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/seondal"
                android:onClick="bongi"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:text="Coming Soon"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="#795548"
                android:textAllCaps="true"
                android:textSize="20sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/galaxy"
                    android:onClick="busan"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mypet"
                    android:onClick="now"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tunel"
                    android:onClick="dorry"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/present"
                    android:onClick="bongi"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/seoulstation"
                    android:onClick="watch"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/robin"
                    android:onClick="ice"/>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>